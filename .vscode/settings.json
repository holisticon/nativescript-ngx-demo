{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "search.exclude": {
    "node_modules/**/*": true,
    "platforms/**/*": true
  },
  "files.exclude": {
    // include the defaults from VS Code
    "**/.git": true,
    "**/.DS_Store": true,
    // exclude .js and .js.map files, when in a TypeScript project
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true
  }
}
